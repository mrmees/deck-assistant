        "@types/node": "^20.19.30",
        "@types/uuid": "^10.0.0",
        "@types/ws": "^8.18.1",
        "dotenv": "^17.2.3",
        "rollup": "^4.57.1",
        "tslib": "^2.8.1",
        "typescript": "^5.0.0"
    },
    "dependencies": {
