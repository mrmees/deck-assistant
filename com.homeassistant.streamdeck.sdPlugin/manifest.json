{
    "$schema": "https://schemas.elgato.com/streamdeck/plugins/manifest.json",
    "Name": "Home Assistant",
    "Version": "1.0.0",
    "Author": "Home Assistant Stream Deck Plugin",
    "Description": "Control Home Assistant entities from Stream Deck",
    "Icon": "imgs/plugin/icon",
    "UUID": "com.homeassistant.streamdeck",
    "SDKVersion": 2,
    "Software": {
        "MinimumVersion": "6.0"
    },
    "OS": [
        {
            "Platform": "windows",
            "MinimumVersion": "10"
        },
        {
            "Platform": "mac",
            "MinimumVersion": "10.15"
        }
    ],
    "Nodejs": {
        "Version": "20",
        "Debug": "enabled"
    },
    "Actions": [
        {
            "Name": "Toggle Entity",
            "UUID": "com.homeassistant.streamdeck.toggle",
            "Icon": "imgs/actions/toggle/icon",
            "Tooltip": "Toggle a Home Assistant entity on/off",
            "Controllers": ["Keypad"],
            "States": [
                {
                    "Image": "imgs/actions/toggle/key",
                    "TitleAlignment": "bottom",
                    "FontSize": "12"
                }
            ],
            "PropertyInspectorPath": "ui/toggle-pi.html"
        }
    ],
    "Category": "Home Assistant",
    "CategoryIcon": "imgs/plugin/category-icon",
    "CodePath": "bin/plugin.js"
}
